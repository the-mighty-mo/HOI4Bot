<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <StartupObject>HOI4Bot.Program</StartupObject>
    <ApplicationIcon>HOI4.ico</ApplicationIcon>
    <Nullable>enable</Nullable>
    <Copyright>Copyright Â© The Mighty Mi 2020-2023</Copyright>
    <Authors>The Mighty Mi</Authors>
    <Company>The Mighty Mi</Company>
    <Description>A Discord bot to manage random HOI4 MP sessions.</Description>
